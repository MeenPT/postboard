<h1 class="text-center mb-4 fw-bold">Sign In</h1>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Continue", class: "btn-primary w-100" %>
  </div>
<% end %>
<div class="text-center mt-2 text-secondary">Don't have an account? <%= link_to "Create Account", new_user_registration_path %></div>